                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <a class="btn btn-primary" href="login.html">Logout</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Bootstrap core JavaScript-->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
                integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
                crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
                integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
                crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/holder/2.9.4/holder.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.11/handlebars.min.js"></script>
    </div>
    <div class="card mb-3">
        <script id="banhang-template" type="text/x-handlebars-template">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <tr>
                            <th>Mã Tài Khoản</th>
                            <th>Username</th>
                            <th>Họ Tên</th>
                            <th>Địa Chỉ</th>
                            <th>Số ĐT</th>
                            <th>Level</th>
                            <th>Chức năng</th>
                        </tr>
                        <tr>
                            <td>
                                <p>{{matk}}</p>
                            </td>
                            <td>{{username}}
                            </td>
                            <td>
                                <p>{{hoten}}</p>
                            </td>
                            <td>
                                <p>{{diachi}}</p>
                            </td>
                            <td>
                                <p>{{sdt}}</p>
                            </td>
                            <td>
                                <p>{{level}}</p>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn btn-info update-celebrity-class"  value ="{{id}}">Edit</button>
                                    <button type="button" class="btn btn-sm btn btn-danger delete-celebrity-class" value ="{{id}}" >Delete</button>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </script>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>
</div>
<script>
    var source = document.getElementById("banhang-template").innerHTML;
    var template = Handlebars.compile(source);
    refresh();
    $('#add-banhang').on(
            'click',
            function (evt) {
                $.ajax({
                    type: "POST",
                    url: "api/taikhoan",
                    data: JSON.stringify({
                        username: $("#username").val(),
                        hoten: $("#hoten").val(),
                        diachi: $("#diachi").val(),
                        sdt: $("#sdt").val(),
                        level: $("#level").val()
                    }),
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        refresh();
                    }
                });
            }
    );
    $(document).on('click', '.delete-celebrity-class',function (evt){
        var id = $(this).attr("value");
        $("#btnDelete").attr("delete-id", id);
        $("#deleteModal").modal('toggle');

    });

    $('#btnDelete').on('click', function (evt) {

        var id = $(this).attr("delete-id");
        $.ajax({
            type: "DELETE",
            url: "api/taikhoan/" + id,
            success: function (data) {
                refresh();
            }
        });
    });


    $(document).on('click', '.update-celebrity-class',function (evt){
        var id = $(this).attr("value");

        $.ajax({
            type: "GET",
            url: "api/taikhoan/"+id,
            success : function(data){
                $('#update-username').val(data[0].username);
                $('#update-hoten').val(data[0].hoten);
                $('#update-diachi').val(data[0].diachi);
                $('#update-sdt').val(data[0].sdt);
                $('#update-level').val(data[0].level);
                $('#btnUpdate').attr("update-id",id);
                $('#updateModal').modal('toggle');
            }
        });
    });

    $('#btnUpdate').on('click', function (evt) {

        var id = $(this).attr("update-id");
        $.ajax({
            type: "PUT",
            url: "api/taikhoan/" + id,
            data: JSON.stringify({
                username: $("#update-username").val(),
                hoten: $("#update-hoten").val(),
                diachi: $("#update-diachi").val(),
                sdt: $("#update-sdt").val(),
                level: $("#update-level").val()

            }),
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                refresh();
            }
        });
    });
    function refresh(){
        $.getJSON("api/taikhoan", function (data) {
            var items = "";
            $.each(data, function (key, val) {
                items += template(val);
            });
            $("#banhang-group").html(items);
        });
    }
</script>
</body>
</html>
